<% 
@fighters.each do |f| %>
	<%= link_to f, class:'niceLink'  do %>
	<div class="row">
		<div class="col-xs-12 col-md-8" >
			<div class="col-xs-2 col-md-1 position">
			<%= rank(f.id)%>.
			</div>
			<div class="col-xs-8 col-md-6">
			<%= image_tag f.avatar.url(:thumb) %>

			</div>
			<div class="col-xs-8 col-md-5">
			<h3> <%= f.firstname %> <%= f.lastname%> </h3>
			</div>
		</div>

		<div class="col-xs-6 col-md-4">
	<div class="col-md-6">
	<div class="col-md-2"></div>
	<div class="col-md-2">
		<h1><small><%= exp(f.id) %></small> </h2>
	</div>
	</div><div class="col-md-2">
		<h2><small><%= wins(f.id) %></small> </h2>
	</div><div class="col-md-2">
		<h2><small><%= draws(f.id) %></small> </h2>
	</div><div class="col-md-2">
		<h2><small><%= lost(f.id) %></small> </h2>
	</div>
		</div>
	</div>
	</br>
	<% end %>
<% end %>



<div class="col-xs-12 col-md-8" >

</div>

